<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        axis="column"
        alignItems="stretch"
        scrollingBehavior="centered"
        grow="1.0" >
        
        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingTop="@style/brls/sidebar/padding_top"
            paddingRight="@style/brls/sidebar/padding_right"
            paddingBottom="@style/brls/sidebar/padding_bottom"
            paddingLeft="@style/brls/sidebar/padding_left">
            
            <brls:DetailCell title="Shockers" id="shockers"/>

            <brls:SelectorCell id="profile"/>

            <brls:Box
                width="100%"
                height="auto"
                axis="row">

                <brls:Button
                    id="right"
                    width="auto"
                    height="auto"
                    style="highlight"
                    grow="1.0"
                    margin="30px"
                    text="Right" />

                <brls:Button
                    id="wrong"
                    width="auto"
                    height="auto"
                    style="highlight"
                    grow="1.0"
                    margin="30px"
                    text="Wrong" />

            </brls:Box>
        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>
